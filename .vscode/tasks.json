{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-opengl",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "src/whiteboard.cpp",
                "src/glad.c",
                "-Iinclude",
                "-Llib",
                "-lglfw3",
                "-lopengl32",
                "-lgdi32",
                "-o",
                "exe/whiteboard.exe"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        }
    ]
}
